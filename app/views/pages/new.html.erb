<%= link_to("<<Back to list>>", {:action => 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="Pages new">
	<h2>Create Page</h2>

	<%= form_for(:page, :url => {:action => 'create', :id => @page.id, :subject_id => @subject.id}) do |f| %>
		
		<%= render(:partial => 'form', :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Create Page") %>
		</div>
	<% end %>
</div>