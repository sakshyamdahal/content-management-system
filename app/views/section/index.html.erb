<% @page_title = "Section" %>
<%= link_to("<<Back to Page: #{@page.name}>>", {:controller => 'pages', :subject_id => @page.subject.id}, :class => 'back-link') %>
<div class="sections index">
	<h2>Sections</h2>

	<%= link_to("Add New Section", { :action => 'new', :page_id => @page.id }, :class => 'action new') %>

	<table class="listing" summary="Sections list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Name</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Page</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td class="center"><%= status_tag(section.visible) %></td>
			<td><%= section.content_type %></td>
			<td class="center"><%= section.page.name %></td>
			<td class="actions">
				<%= link_to("Show", { :action => 'show', :id => section.id, :page_id => @page.id  }, :class => 'action show') %>
				<%= link_to("Edit", { :action => 'edit', :id => section.id, :page_id => @page.id  }, :class => "action edit") %>
				<%= link_to("Delete", { :action => 'delete', :id => section.id, :page_id => @page.id }, :class => "action delete") %>
			</td>
		</tr>
		<% end %>
	</table>
</div>